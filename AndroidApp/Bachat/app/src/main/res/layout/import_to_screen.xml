<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewEarning"
        android:layout_width="50dp"
        android:layout_height="50dp"


        android:layout_marginTop="150dp"
        android:layout_marginStart="70dp"




        app:srcCompat="@drawable/addincome" />

    <ImageView
        android:id="@+id/imageViewExpense"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"

        android:layout_marginStart="70dp"

        app:srcCompat="@drawable/addexpense" />

    <TextView
        android:id="@+id/textViewImport"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="IMPORT TO?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewImportEarning"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/imageViewEarning"
        android:layout_alignBottom="@+id/imageViewEarning"
        android:layout_marginStart="25dp"

        android:gravity="center"
        android:text="Income"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/textViewImportExpense"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"


        android:text="Expenses"
        android:textSize="24sp"
        android:layout_toRightOf="@+id/imageViewExpense"
        android:layout_alignBottom="@+id/imageViewExpense"
        android:gravity="center"/>

</RelativeLayout>