<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/FlashTheme"
    tools:context="com.example.Bachat.SetupScreen">

    <TextView
        android:id="@+id/textViewHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="173dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        android:layout_marginBottom="15dp"
        android:text="Hello"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textViewHello"
        android:layout_marginEnd="80dp"
        android:text="WELCOME TO BACHAT"
        android:textSize="24sp"
        />


    <TextView
        android:id="@+id/textViewEditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:text="Name"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/editTextEditName"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="48dp"
        android:ems="10"
        android:hint="What would you like to be called?"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/textViewEditName"
        android:textColorHint="#FFFFFF"
        android:layout_below="@+id/textViewWelcome"
        />


    <TextView
        android:id="@+id/textViewEditPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textViewEditName"
        android:text="Password"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextEditPassword"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editTextEditName"
        android:layout_marginStart="110dp"

        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter a password."
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF" />

    <TextView
        android:id="@+id/textViewEditPasswordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editTextEditPassword"
        android:text="Confirm"
        android:textSize="18sp"
        />


    <EditText
        android:id="@+id/editTextEditPasswordConfirm"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editTextEditPassword"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"

        android:ems="10"
        android:hint="Re-enter password."
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF" />

    <TextView
        android:id="@+id/textViewEditQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:text="Question"
        android:textSize="18sp"
        android:layout_below="@+id/textViewEditPasswordConfirm"
        />

    <EditText
        android:id="@+id/editTextEditQuestion"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editTextEditPasswordConfirm"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Add a security question."
        android:inputType="text"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditPasswordConfirm" />

    <TextView
        android:id="@+id/textViewEditAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:text="Answer"
        android:textSize="18sp"
        android:layout_below="@+id/textViewEditQuestion"
        />

    <EditText
        android:id="@+id/editTextEditAnswer"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editTextEditQuestion"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter the answer."
        android:inputType="text"
        android:textColorHint="#FFFFFF" />


    <TextView
        android:id="@+id/textViewEditMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:text="E-Mail"
        android:textSize="18sp"
        android:layout_below="@+id/textViewEditAnswer"
        />


    <EditText
        android:id="@+id/editTextEditMail"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editTextEditAnswer"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Enter email ID."
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF" />


    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="159dp"
        android:backgroundTint="#4C4C4C"
        android:text="PROCEED"
        android:layout_below="@+id/editTextEditMail"
        />


</RelativeLayout>