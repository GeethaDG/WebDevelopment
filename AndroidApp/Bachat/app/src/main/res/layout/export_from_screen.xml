<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewEarning"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:onClick="exportEarning"
        android:layout_below="@+id/textViewImport"

        app:srcCompat="@drawable/addincome" />

    <TextView
        android:id="@+id/textViewImport"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="EXPORT FROM?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewImportEarning"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_marginTop="30dp"
        android:gravity="center"
        android:onClick="exportEarning"
        android:layout_toRightOf="@+id/imageViewEarning"
        android:text="Income"
        android:textSize="24sp"
        android:layout_below="@+id/textViewImport"

        tools:layout_editor_absoluteY="132dp" />


    <ImageView
        android:id="@+id/imageViewExpense"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="77dp"
        android:layout_below="@+id/imageViewEarning"
        android:layout_marginTop="30dp"

        android:onClick="exportExpense"

        app:srcCompat="@drawable/addexpense" />

    <TextView
        android:id="@+id/textViewImportExpense"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewImportEarning"


        android:layout_marginLeft="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/imageViewExpense"
        android:gravity="center"
        android:onClick="exportExpense"
        android:text="Expenses"
        android:textSize="24sp" />


</RelativeLayout>