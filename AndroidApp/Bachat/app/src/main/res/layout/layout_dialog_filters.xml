<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
       android:background="@color/dialogbox">

        <TextView
            android:id="@+id/chooseCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:text="Category"
            android:textColor="#000000" />


        <Spinner
            android:id="@+id/spnCategory"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/chooseCategory"
            android:background="#818080"
            android:foregroundTint="#4C4C4C" />

        <View
            android:id="@+id/divider11"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"

            android:background="@color/PrimaryDarkColour2"
            android:layout_below="@+id/chooseCategory"
            />
        <TextView
            android:id="@+id/chooseMOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnCategory"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:text="Paid By"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spnMop"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_below="@+id/spnCategory"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"

            android:layout_toRightOf="@+id/chooseMOP"
            android:background="#FF818080"
            android:foregroundTint="#4C4C4C" />



        <View
            android:id="@+id/divider12"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="@color/PrimaryDarkColour2"
            android:layout_below="@+id/chooseMOP"
            />


        <TextView
            android:id="@+id/chooseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnMop"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:text="Date"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/editFirstDate"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnMop"
            android:layout_marginStart="53dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/chooseDate"
            android:background="@drawable/add_expense"

            android:backgroundTint="#A8A8A8"
            android:text="Start date"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/editSecondDate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnMop"
            android:gravity="center"
            android:background="@drawable/add_expense"
            android:layout_marginStart="2dp"
            android:backgroundTint="#A8A8A8"

            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/editFirstDate"

            android:text="End Date"
            android:textColor="#000000" />

        <View
            android:id="@+id/divider13"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"

            android:background="@color/PrimaryDarkColour2"
            android:layout_below="@+id/chooseDate"
            />



    </RelativeLayout>



</RelativeLayout>