<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Grey"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardCornerRadius="6dp"
   android:layout_marginVertical="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:text="Category"
            android:textAlignment="viewStart"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSubcategory"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:paddingLeft="4dp"
            android:text="Sub-category"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewAmountText"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textViewSubcategory"
            android:gravity="center"
            android:text="Spent:"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDateText"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            android:layout_toEndOf="@+id/textViewSubcategory"
            android:gravity="center"
            android:text="On: "
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewModeOfPaymentText"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            android:layout_toEndOf="@+id/textViewSubcategory"
            android:gravity="center"
            android:text="Via: "
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewCurrency"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textViewAmountText"
            android:gravity="center"
            android:text="Currency"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAmount"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textViewCurrency"
            android:gravity="center"
            android:text="Amount"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textStyle="bold" />
,
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            android:layout_toEndOf="@+id/textViewAmountText"
            android:gravity="center"
            android:text="Date"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewModeOfPayment"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            android:layout_toEndOf="@+id/textViewAmountText"
            android:gravity="center"
            android:text="Payment Mode"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>