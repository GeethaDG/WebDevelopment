<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#232323"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageButton
        android:id="@+id/btn_Back"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewThresholdCategory"
        app:layout_constraintEnd_toStartOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_arrow_back"
        android:background="#232323"/>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="70dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Set Threshold"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="sans"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginStart="339dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/Black"
        app:fabSize="normal"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_home" />


    <TextView
        android:id="@+id/textViewThresholdCategory"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="80dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/editTextThreshold"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textViewThresholdCategory"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSetThreshold"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#4C4C4C"
        android:text="SET"
        android:layout_below="@+id/editTextThreshold"
        />

    <Button
        android:id="@+id/btnRemoveThreshold"
        android:layout_width="92dp"
        android:layout_alignLeft="@+id/btnSetThreshold"
        android:layout_height="48dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="75dp"

        android:backgroundTint="#4C4C4C"
        android:text="REMOVE"
        android:layout_below="@id/editTextThreshold"
        />
</RelativeLayout>